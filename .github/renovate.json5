{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>microsoft/m365-renovate-config:beachballLibraryRecommended#no-pin",
    "github>microsoft/m365-renovate-config:automergeTypes#no-pin",
    "github>microsoft/m365-renovate-config:groupMore#no-pin",
    "github>microsoft/m365-renovate-config:groupTypes#no-pin",
    "github>microsoft/m365-renovate-config:keepFresh#no-pin",
    "github>microsoft/m365-renovate-config:restrictNode(16)#no-pin"
  ],
  "ignorePresets": ["github>microsoft/m365-renovate-config:dependencyDashboardMajor#no-pin"],

  "labels": ["renovate"],
  "reviewers": ["ecraig12345"],

  "lockFileMaintenance": {
    "automerge": true,
    "platformAutomerge": true
  },

  "packageRules": [
    // {
    //   "matchPaths": ["*/**"],
    //   "additionalBranchPrefix": "{{packageFileDir}}-",
    //   "commitMessageSuffix": "({{packageFileDir}})",
    //   "excludePackageNames": [
    //     // update all action.yaml in single pull request
    //     "@types/node"
    //   ]
    // },
    // {
    //   "matchDepTypes": ["devDependencies"],
    //   "automerge": true,
    //   "platformAutomerge": true
    // },
    {
      "groupName": "github action packages",
      "matchPackagePrefixes": ["@actions/"]
    },
    {
      "matchPackageNames": ["@types/node"],
      "allowedVersions": "16.x"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["^action.ya?ml$", "^.+/action.ya?ml$"],
      "matchStrings": ["using: 'node(?<currentValue>\\d+)'"],
      "depNameTemplate": "@types/node",
      "datasourceTemplate": "npm"
    }
  ]
}
