{
  "name": "beachball-actions-monorepo",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "lage build --verbose",
    "change": "beachball change",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .js,.ts --cache",
    "package": "lage package --verbose",
    "prepare": "husky install",
    "syncpack:check": "syncpack list-mismatches",
    "syncpack": "syncpack fix-mismatches",
    "test": "lage test --verbose"
  },
  "devDependencies": {
    "@tsconfig/node16": "1.0.2",
    "@types/jest": "27.5.1",
    "@types/node": "16.11.36",
    "@typescript-eslint/eslint-plugin": "5.26.0",
    "@typescript-eslint/parser": "5.26.0",
    "@vercel/ncc": "0.34.0",
    "beachball": "2.22.4",
    "eslint": "8.16.0",
    "eslint-plugin-jest": "26.2.2",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "8.0.1",
    "jest": "28.1.0",
    "js-yaml": "4.1.0",
    "lage": "0.41.0",
    "lint-staged": "12.4.2",
    "prettier": "2.6.2",
    "rimraf": "3.0.2",
    "syncpack": "7.2.2",
    "ts-jest": "28.0.3",
    "typescript": "4.7.2"
  },
  "workspaces": [
    "*"
  ],
  "beachball": {
    "scope": [
      "beachball-actions-common"
    ],
    "branch": "main",
    "tag": "latest",
    "ignorePatterns": [
      "**/*.test.ts",
      "**/jest.config.js"
    ]
  },
  "lint-staged": {
    "*.!(js|ts)": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
